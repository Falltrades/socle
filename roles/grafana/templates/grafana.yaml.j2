apiVersion: grafana.integreatly.org/v1beta1
kind: Grafana
metadata:
  name: {{ dsc.grafana.namespace }}
  namespace: {{ dsc.grafana.namespace }}
  labels:
    dashboards: "{{ dsc.grafana.namespace }}"
spec:
  deployment:
    spec:
      template:
        spec:
          containers:
            - name: grafana
              env:
                - name: GF_SECURITY_ADMIN_USER
                  valueFrom:
                    secretKeyRef:
                      key: GF_SECURITY_ADMIN_USER
                      name: grafana-creds
                - name: GF_SECURITY_ADMIN_PASSWORD
                  valueFrom:
                    secretKeyRef:
                      key: GF_SECURITY_ADMIN_PASSWORD
                      name: grafana-creds
  persistentVolumeClaim:
    metadata:
      name: grafana-pvc
      namespace: {{ dsc.grafana.namespace }}
    spec:
      accessModes:
        - ReadWriteOnce
      resources:
        requests:
          storage: {{ dsc.grafana.grafanaPvcSize }}
  config:
    log:
      mode: "console"
    auth:
      disable_login_form: "false"