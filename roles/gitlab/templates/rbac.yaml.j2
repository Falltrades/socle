apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: gitlab-nginx-ingress
  namespace: {{ dsc.gitlab.namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: gitlab-nginx-ingress
subjects:
- kind: ServiceAccount
  name: gitlab-nginx-ingress
  namespace: {{ dsc.gitlab.namespace }}
