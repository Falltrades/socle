global:
{% if not cluster_k8s %}
  openshift: true
{% endif %}
{% if dsc.global.metrics.enabled %}
  serverTelemetry:
    prometheusOperator: true
{% endif %}
injector:
{% if cluster_k8s is defined and cluster_k8s == "true" %}
  securityContext:
    pod:
      runAsNonRoot: true
      runAsGroup: 1000 
      runAsUser: 100
      fsGroup: 1000
    container:
      allowPrivilegeEscalation: false
      capabilities:
        drop:
          - ALL
{% endif %}
{% if dsc.global.metrics.enabled %}
  metrics:
    enabled: true
{% endif %}
  image:
{% if private_image_repository is not defined %}
    repository: docker.io/hashicorp/vault-k8s
  agentImage:
    repository: docker.io/hashicorp/vault
{% endif %}
{% if private_image_repository is defined and private_image_repository != "" %}
    repository: "{{ private_image_repository }}/hashicorp/vault-k8s"
  agentImage:
    repository: "{{ private_image_repository }}/hashicorp/vault"
{% endif %}
server:
{% if cluster_k8s is defined and cluster_k8s == "true" %}
  statefulSet:
    securityContext:
      pod:
        runAsNonRoot: true
        runAsGroup: 1000 
        runAsUser: 100
        fsGroup: 1000
      container:
        allowPrivilegeEscalation: false
{% endif %}
{% if private_image_repository is defined and private_image_repository != "" %}
  image:
    repository: "{{ private_image_repository }}/hashicorp/vault"
{% endif %}
  route:
    enabled: false
  ha:
    enabled: false
  standalone:
    enabled: true
{% if dsc.global.metrics.enabled %}
    config: |
      ui = true

      listener "tcp" {
        tls_disable = 1
        address = "[::]:8200"
        cluster_address = "[::]:8201"
        telemetry {
          unauthenticated_metrics_access = "false"
        }
      }
      storage "file" {
        path = "/vault/data"
      }
      telemetry {
        prometheus_retention_time = "30s"
        disable_hostname = true
      }
{% endif %}
  auditStorage:
    enable: true
  dataStorage:
    enable: true
    size: {{ dsc.vault.pvcSize }}
  image:
{% if private_image_repository is not defined %}
    repository: docker.io/hashicorp/vault
csi:
  image:
    repository: docker.io/hashicorp/vault-csi-provider
  agent:
    image:
      repository: docker.io/hashicorp/vault
{% endif %}
{% if private_image_repository is defined and private_image_repository != "" %}
    repository: "{{ private_image_repository }}/hashicorp/vault"
csi:
  image:
    repository: "{{ private_image_repository }}/hashicorp/vault-csi-provider"
  agent:
    image:
      repository: "{{ private_image_repository }}/hashicorp/vault"
{% endif %}
{% if dsc.global.metrics.enabled %}
serverTelemetry:
  serviceMonitor:
    enabled: true
{% endif %}
