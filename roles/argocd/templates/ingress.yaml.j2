apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: argo-ingress
  namespace: argo-system
  annotations:
    cert-manager.io/cluster-issuer: argo-system-letsencrypt-issuer
spec:
  tls:
  - hosts:
    - {{ ARGOCD_DOMAIN }}
    secretName: argo-system-issuer-account-key
  rules:
    - host: {{ ARGOCD_DOMAIN }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: argo-argo-cd-server
                port:
                  number: 80