apiVersion: keycloak.org/v1alpha1
kind: KeycloakClient
metadata:
  name: console-frontend-client
  labels:
    app: sso
  namespace: {{ DSC.keycloak.namespace }}
spec:
  client:
    clientId: console-frontend
    standardFlowEnabled: true
    publicClient: true
    redirectUris:
      - "https://{{ CONSOLE_DOMAIN }}/*"
    webOrigins:
      - "https://{{ CONSOLE_DOMAIN }}"
    defaultClientScopes:
    - generic

  realmSelector:
    matchLabels:
      app: sso
